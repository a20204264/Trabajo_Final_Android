<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotasActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTADO DE NOTAS"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/LVNOTAS"
            android:layout_width="match_parent"
            android:layout_height="391dp">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BTNNUEVONOTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:backgroundTint="#2196F3"
                android:text="NUEVO"
                app:cornerRadius="60dp"
                app:icon="@drawable/ic_add" />

            <Button
                android:id="@+id/BTNRETROCEDERNOTA"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:backgroundTint="#0A2EF4"
                android:text="RETROCEDER"
                app:cornerRadius="60dp"
                app:icon="@drawable/ic_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BTNELIMINARNOTA"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:backgroundTint="#EC0C0C"
                android:text="ELIMINAR"
                app:cornerRadius="60dp"
                app:icon="@drawable/ic_delete" />

            <Button
                android:id="@+id/BTNEDITARNOTA"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:backgroundTint="#009688"
                android:text="EDITAR"
                app:cornerRadius="60dp"
                app:icon="@drawable/ic_editar" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>